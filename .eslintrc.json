{
  "extends": [
    "google"
  ],
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "semi": "off",
    "camelcase": "off",
    "no-unneeded-ternary": "off",
    "no-control-regex": "off",
    "no-useless-escape": "off",
    "require-jsdoc": "off",
    "max-len": [
      "error",
      { "code": 100 }
    ],
    "space-before-function-paren": [
      "error",
      { "anonymous": "always", "named": "never", "asyncArrow": "always" }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "only-multiline"
    ]
  },
  "env": {
    "node": true,
    "browser": true,
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }
}